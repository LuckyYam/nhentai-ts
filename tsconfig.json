{
  "compilerOptions": {
    "target": "es6",                                  
    "module": "commonjs",                                
    "declaration": true,                              
    "outDir": "./dist",                               
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                     
    "noImplicitAny": true,                         
    "strictNullChecks": false,                         
    "strictFunctionTypes": true,
    "noUnusedLocals": true             
  },
  "include": ["src/**/*.ts"]
}
